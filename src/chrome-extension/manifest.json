{
  "manifest_version": 3,
  "name": "ChildSafeNet Extension",
  "version": "1.0.0",
  "description": "ChildSafeNet - Scan & block unsafe sites using ChildSafeNet API",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChildSafeNet"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5173/",
    "https://localhost:7047/*",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["block.html", "block.js"],
      "matches": ["<all_urls>"]
    }
  ]
}